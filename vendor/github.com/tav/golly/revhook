from os.path import realpath

@checker(include=['*.go'])
def gofmt(changelist, files):
    """Need to gofmt %s\n\n"""

    for filename in files:
        stdout, stderr, retcode = run('gofmt', '-l=true', filename)
        if stdout:
            changelist.error(
                filename, "Please run:\n\n    gofmt -w %s" % realpath(filename)
                )
